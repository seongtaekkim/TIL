pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                withMaven(globalMavenSettingsConfig: '', jdk: 'jdk17', maven: 'Maven3.9.6', mavenSettingsConfig: '', traceability: true) {
                    sh 'mvn -f cloud/jenkins/src/demo clean package'
                }
            }
        }
        stage('Docker Build And Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'seongtaekkim', toolName: 'Docker', url: 'https://hub.docker.com') {
                        withDockerContainer(image: 'seongtaekkim/demo-springboot:v1', toolName: 'Docker') {
                            sh 'docker push'
                        }
                    }

                  
                }
            }
        }
    }
}
